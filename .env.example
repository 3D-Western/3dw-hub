# ============================================
# DOMAIN CONFIGURATION
# ============================================
# PUBLIC ACCESS (via Traefik)
FRONTEND_DOMAIN=localhost
N8N_DOMAIN=n8n.127.0.0.1.nip.io
SEAWEEDFS_S3_DOMAIN=s3.127.0.0.1.nip.io

# Public URL for frontend (used in CORS, links, etc.)
NEXT_PUBLIC_SERVER_URL=http://localhost

# INTERNAL ACCESS:
# - Backend: http://backend:8000 (Docker network only)
# - Filer: http://localhost:8888 (host machine only)

# ============================================
# POSTGRESQL DATABASE (for N8N)
# ============================================
# NOTE: PostgreSQL container and N8N require different variable names
# Keep these values synchronized!

# PostgreSQL container variables
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password_here

# N8N database connection variables (must match above)
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=your_secure_postgres_password_here

# ============================================
# MARIADB DATABASE (for Backend)
# ============================================
# NOTE: MariaDB container and Spring Boot require different variable names
# Keep these values synchronized!

# MariaDB container variables
MARIADB_DATABASE=3dw
MARIADB_USER=3dw_user
MARIADB_PASSWORD=your_secure_mariadb_password_here
MARIADB_ROOT_PASSWORD=your_secure_mariadb_root_password_here

# Spring Boot connection variables (must match above)
SPRING_MARIADB_DB=3dw
SPRING_MARIADB_USERNAME=3dw_user
SPRING_MARIADB_PASSWORD=your_secure_mariadb_password_here

# ============================================
# N8N CONFIGURATION
# ============================================
# N8N Encryption Key (generate a random 32-character string)
# IMPORTANT: Keep this secret and consistent across deployments
N8N_ENCRYPTION_KEY=your_random_32_character_encryption_key_here

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-2

# S3 Bucket
AWS_S3_BUCKET_NAME=3dw-backend-dev
AWS_S3_BUCKET_TEMP_FOLDER=tmp

# SES (Email)
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_TEST_MODE=true
AWS_SES_MAX_RETRY_ATTEMPTS=3
AWS_SES_RETRY_DELAY_MS=1000

